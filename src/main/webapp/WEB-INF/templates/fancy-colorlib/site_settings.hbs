{{>head}}
{{>header}}
{{>side_navbar}}
<div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-5 col-8 align-self-center">
                        <h3 class="text-themecolor m-b-0 m-t-0">Site Settings</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item active">Site Settings</li>
                        </ol>
                    </div>
                   
                </div>
				<div class="card" style="font-style:bold">
				<div class="card-body" style="padding:30px">
	<h2 style="padding-bottom:15px">Referral Settings</h2>
	<div class="card-body" style="padding:15px">
	
	<div class="row">
	<div class="col-md-7"><strong><h5>Referral points on joining of invited friend</h5></strong></div>
	<div class="col-md-1">	:</div> 
	<div class="col-md-2 form-group" id="friendPoint"><h5 >	{{friendPoint}}</h5>
	<input type="hidden" class="form-control">
	</div> 
	<div class="col-md-1" id="friendPointEdit"><a href="javascript:void(0)"><i class="fa fa-edit"></i></a>
	<button type="button" class="btn friend-btn" style="display:none" onclick="ajaxRequest('savesitesettings','POST',{type:'friendPoint',adminName:'{{#loggedInUser}}{{name}}{{/loggedInUser}}',point:$('#friendPoint input').val()}, {dataType:'json', callback:pointsetting})">Save</button>
	</div> 
	</div>
	</div>
	
	<div class="card-body" style="padding:15px">
	<div class="row">
	<div class="col-md-7"><strong><h5>Referral points on joining of invited friend's invite</h5></strong></div>
	<div class="col-md-1">	:</div> 
	<div class="col-md-2 form-group" id="fofPoint"><h5>	{{fofPoint}}</h5>
	<input type="hidden" class="form-control">
	</div> 
	<div class="col-md-1" id="fofPointEdit"><a href="javascript:void(0)"><i class="fa fa-edit"></i></a>
	<button type="button" class="btn friend-btn" style="display:none" onclick="ajaxRequest('savesitesettings','POST',{type:'fofPoint',adminName:'{{#loggedInUser}}{{name}}{{/loggedInUser}}',point:$('#fofPoint input').val()}, {dataType:'json', callback:pointsetting})">Save</button>
	</div> 
	</div>
	</div>
	<div class="card-body" style="padding:15px">
	<div class="row">
	<div class="col-md-7"><strong><h5>Referral points on becoming our member</h5></strong></div>
	<div class="col-md-1">	:</div> 
	<div class="col-md-2 form-group" id="memberPoint"><h5 >	{{memberPoint}}</h5>
	<input type="hidden" class="form-control">
	</div> 
	<div class="col-md-1" id="memberPointEdit"><a href="javascript:void(0)" ><i class="fa fa-edit"></i></a>
	<button type="button" class="btn friend-btn" style="display:none" onclick="ajaxRequest('savesitesettings','POST',{type:'memberPoint',adminName:'{{#loggedInUser}}{{name}}{{/loggedInUser}}',point:$('#memberPoint input').val()}, {dataType:'json', callback:pointsetting})">Save</button>
	</div> 
	</div>
</div>
</div>

</div>
</div>
</div>
