<script>
$('#friendPointEdit').click(function(){
	$('#friendPoint h5').hide();
	$('#friendPoint input').attr('type','number');
	$('#friendPointEdit button').css('display','inline');
	$('#friendPointEdit a').hide();
	
	$('#fofPoint h5').show();
	$('#fofPoint input').attr('type','hidden');
	$('#fofPointEdit button').css('display','none');
	$('#fofPointEdit a').show();
	
	$('#memberPoint h5').show();
	$('#memberPoint input').attr('type','hidden');
	$('#memberPointEdit button').css('display','none');
	$('#memberPointEdit a').show();
	
});


$('#fofPointEdit').click(function(){
$('#friendPoint h5').show();
	$('#friendPoint input').attr('type','hidden');
	$('#friendPointEdit button').css('display','none');
	$('#friendPointEdit a').show();
	
	$('#fofPoint h5').hide();
	$('#fofPoint input').attr('type','number');
	$('#fofPointEdit button').css('display','inline');
	$('#fofPointEdit a').hide();
	
	$('#memberPoint h5').show();
	$('#memberPoint input').attr('type','hidden');
	$('#memberPointEdit button').css('display','none');
	$('#memberPointEdit a').show();
});
$('#memberPointEdit').click(function(){
$('#friendPoint h5').show();
	$('#friendPoint input').attr('type','hidden');
	$('#friendPointEdit button').css('display','none');
	$('#friendPointEdit a').show();

	$('#memberPoint h5').hide();
	$('#memberPoint input').attr('type','number');
	$('#memberPointEdit button').css('display','inline');
	$('#memberPointEdit a').hide();
	
	$('#fofPoint h5').show();
	$('#fofPoint input').attr('type','hidden');
	$('#fofPointEdit button').css('display','none');
	$('#fofPointEdit a').show();
});
function pointsetting(data,extraInfo,response){
console.log("type " , data.type);
$('#'+ data.type + ' h5').text($('#'+ data.type + ' input').val());
$('#'+ data.type + ' h5').show();
$('#'+ data.type + ' input').attr('type','hidden');
$('#'+ data.type + 'Edit button').css('display','none');
$('#'+ data.type + 'Edit a').show();
}
</script>
