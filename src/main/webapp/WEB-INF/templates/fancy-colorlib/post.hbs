												<div data-icon="X" class="linea-icon linea-basic"></div>
											{{/heart}}
												
												
												
												</button><button type="button" class="btn btn-secondary heartBreakCount" data-container="body">{{#activity}}{{heartBreaks}}{{/activity}} Heartbreak 
											</button>
											
										</div>
										<div style="display:none;" class="divBox">
											<ul class="list-group" style="margin-top:5px">
											<li class="list-group-item viewAll" style="display:none;background-color:#E5E7EA"><a href="javascript:void(0)" onclick="ajaxRequest('showcomments','POST', { activityId:'{{_id}}',skip:'0',limit:'15'}, {dataType:'json', callback:allComment})" class="text-center text-center" data-toggle="modal" data-target=".allComments" class="model_img img-responsive">View More Comments</a></li>
											</ul>
											
											<textarea class="form-control" placeholder="Type Your Comment" rows="2" style="background-color:#fff;margin-top:5px" id ="commentMessage{{_id}}"></textarea>
											<button type="button" class="btn btn-secondary" onclick="ajaxRequest('addcomment','POST', {fid:'{{uid}}', activityId:'{{_id}}', comment:$('#commentMessage{{_id}}').val()}, {dataType:'json', callback:postComment})">Post</button>
											
											</div>
											</div>
