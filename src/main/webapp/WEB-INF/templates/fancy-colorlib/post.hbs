{{>header}}
{{>side_navbar}}
<div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
<div class="row">
    <div class="col-12">
         <div class="card">
            <div class="card-body text-center" style="padding:30px">
				{{#activity}}
				
				{{#uploadpic}}
				<div class="sl-right text-center timeline{{_id}}">
				<div>
				<img class = "img-thumbnail img-fluid" src = "{{path}}" width="350" height="350">
				</div>
                                             <div class="like-comm btn-group" style="margin-top:5px">
											
											<button type="button" class="btn btn-secondary comment" data-container="body" onclick="ajaxRequest('showcomments','POST',  {activityId:'{{_id}}' }, {dataType:'json', callback:commentBox})" >
												<a href="javascript:void(0)" class="link m-r-10 comment">{{#activity}}{{comments}}{{/activity}} Comment</a>
											</button>
											
											<button type="button" class="btn btn-secondary heart" data-container="body" onclick="ajaxRequest('heartincrease','POST',{activityId:'{{_id}}',broken:false},{dataType:'json',callback:heartIncrease})">
														
												<i class="fa {{^heart}}fa-heart-o{{/heart}}{{#heart}}{{#broken}}fa fa-heart-o{{/broken}}{{^broken}}fa fa-heart{{/broken}}{{/heart}} text-danger"></i>
	
												
												</button><button type="button" class="btn btn-secondary heartCount" data-container="body">{{#activity}}{{hearts}}{{/activity}} Heart </button>
											</button>
											
											<button type="button" class="btn btn-secondary heartBreak" data-container="body" onclick="ajaxRequest('heartincrease','POST',{activityId:'{{_id}}',broken:true},{dataType:'json',callback:heartIncrease})">
											{{#heart}} 
												{{#if broken}}
												<i class="mdi mdi-heart-broken"></i>
												{{else}}
												<div data-icon="X" class="linea-icon linea-basic"></div>
												{{/if}}
											{{/heart}}
