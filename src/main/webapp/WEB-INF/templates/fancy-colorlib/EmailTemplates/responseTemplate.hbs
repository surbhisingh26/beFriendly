.btn:hover{
background: #1e88e5;
    border: 1px solid #1e88e5;
	  box-shadow:  0 14px 26px -12px rgba(23, 105, 255, 0.42), 0 4px 23px 0 rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(23, 105, 255, 0.2);
}
	.name{
	float:right;
	padding:10px;
	color:black;
	font-weight:1000;
	padding-top:25px;
	vertical-align: middle;
	box-sizing: inherit;
	}
.profilepic{
height: 35px;
width: 35px;
    border-radius: 100%;
	vertical-align: middle;
	box-sizing: inherit;
}
